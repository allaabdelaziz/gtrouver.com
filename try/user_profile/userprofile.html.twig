{% extends 'base2.html.twig' %}


{% block title %}Users index
{% endblock %}


{% block body %}


	<div class="container rounded bg-white px-0 ">
		<div class="row mb-5 ">
			<div class="col-md-4 border-right">
				<div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="../images/blank-profile-picture-973460_960_720.webp"><span class="font-weight-bold">{{app.user.civilite | capitalize}}
						{{app.user.secondname | capitalize }}</span>
					<span class="text-black-50">{{app.user.email}}</span>
					<span></span>
				</div>
			</div>
			<div class="col-md-6 ">
				<div class="p-3 py-5">
					<div class="d-flex justify-content-between align-items-center mb-3">
						<h4>Profile </h4>
					</div>
					<div class="row mt-2">
						<div class="col-md-6">
							<label class="labels">nom :
								<div class="text-dark">{{app.user.firstname |capitalize}}</div>
							</div>
							<div class="col-md-6">
								<label class="labels">prenom :<div class="text-dark">
										{{app.user.secondname |capitalize}}</div>
								</div>
							</div>
							<div class="row mt-3">
								<div class="col-md-12 mb-3 ">
									<label class="labels">adresse postale:</label>
									<div class="text-dark">{{app.user.address |capitalize}}</div>
								</div>
								<div class="col-md-6 mb-3">
									<label class="labels">Postcode:</label>
									<div class="text-dark">
										{{app.user.zipcode}}
									</div>
								</div>
								<div class="col-md-6 mb-3">
									<label class="labels">Ville:</label>
									<div class="text-dark">{{app.user.city}}</div>
								</div>
								<div class="col-md-12 mb-3 ">
									<label class="labels">Telephone:</label>
									<div class="text-dark">{{app.user.phone}}</div>
								</div>

							</div>

							<a class="btn btn-primary" href="{{ path('app_user_edit', { id: app.user.id}) }} ">Modifier</a>
							<a class="btn btn-warning" href="{{ path('app_reset_password_profile', { id: app.user.id}) }} ">
								Modifier mot de passe</a>
						</div>

					</div>

				</div>


				{% include "footer.html.twig" %}

		</div>


	</div>


{% endblock %}
